@model ListaZaginionych.Data.Models.LostPeopleModel
@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Usuń</h1>

<h3>Czy napewno chcesz usunąć ten wpis?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Imię
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Nazwisko
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>
    
    <form asp-controller="LostPeople" asp-action="ConfirmedDelete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Image" />
        <input type="submit" value="Usuń" class="btn btn-danger text-uppercase"/> |
        <a class="btn alert-secondary text-uppercase" asp-action="Index">Powrót do listy</a>
    </form>
</div>
